<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Welcome | FoodieHub üç¥</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      margin: 0;
      padding: 0;
      background: linear-gradient(120deg, #fff5e6, #ffe6cc, #fff0e1);
      font-family: 'Poppins', sans-serif;
      overflow-x: hidden;
    }

    /* üîç Search Bar */
    .search-wrapper {
      position: relative;
     width: 50rem;
      /* margin: 40px auto 10px; */
      margin-left: 350px;
      align-items: center;
    }

    .search-input {
      width: 100%;
      padding: 14px 50px;
      border-radius: 50px;
      border: none;
      outline: none;
      font-size: 1rem;
      box-shadow: 0 6px 20px rgba(0,0,0,0.12);
      text-align: center;
    }

    .search-icon {
      position: absolute;
      left: 18px;
      top: 50%;
      transform: translateY(-50%);
      font-size: 1.2rem;
      color: #ff5e62;
    }

    /* üîé Search Results Grid */
#searchResults {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* üëà 3 cards per row */
  gap: 20px;
  margin-top: 30px;
}

/* üì¶ Result Card */
.result-card {
  background: white;
  border-radius: 18px;
  padding: 16px;
  display: flex;
  gap: 14px;
  align-items: center;
  box-shadow: 0 8px 20px rgba(0,0,0,0.12);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.result-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 14px 30px rgba(0,0,0,0.18);
}

/* üñºÔ∏è Food Image */
.result-card img {
  width: 80px;
  height: 80px;
  border-radius: 14px;
  object-fit: cover;
}

/* üì± Responsive */
@media (max-width: 992px) {
  #searchResults {
    grid-template-columns: repeat(2, 1fr); /* tablets */
  }
}

@media (max-width: 576px) {
  #searchResults {
    grid-template-columns: 1fr; /* mobile */
  }
}

    /* Logo */
    .logo {
      font-size: 3rem;
      font-weight: 700;
      color: #ff5e62;
      animation: bounceIn 2s ease forwards;
      text-shadow: 2px 2px 10px rgba(255, 94, 98, 0.3);
      margin-top: 100px;
    }

    @keyframes bounceIn {
      0% { transform: scale(0.5); opacity: 0; }
      50% { transform: scale(1.1); opacity: 1; }
      100% { transform: scale(1); }
    }

    .subtitle {
      color: #444;
      font-size: 1.2rem;
    }

    /* Food bubbles */
    .food-item {
      width: 180px;
      height: 180px;
      border-radius: 50%;
      overflow: hidden;
      margin: 15px;
      box-shadow: 0 5px 15px rgba(255,128,8,0.2);
      transition: 0.3s;
      margin-top: -20px;
    }

    .food-item:hover {
      transform: scale(1.1);
    }

    .food-item img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .explore-btn {
      background: linear-gradient(90deg, #ff9966, #ff5e62);
      color: white;
      border-radius: 50px;
      padding: 12px 30px;
      font-weight: 600;
      border: none;
      margin-top: 10px;
      box-shadow: 0 5px 15px rgba(255, 94, 98, 0.3);
    }

    .explore-btn:hover {
      background: linear-gradient(90deg, #ff5e62, #ff9966);
    }
  </style>
</head>

<body>

 
  <!-- Logo -->
  <div class="container text-center" style="margin-top: 50px;">
    <div class="logo">
      <img src="/images/logo.jpg" style="width:65px;height:65px;border-radius:50%;">
      Foodie<span style="color:#ff9966;">Hub</span>
    </div>
    <p class="subtitle">Delicious food delivered to your doorstep üçïüçîüç£</p>
  </div>

   <!-- üîç Global Search -->
  <div class="container">
    <div class="search-wrapper">
      <i class="bi bi-search search-icon"></i>
      <input
        type="text"
        id="globalSearch"
        class="search-input"
        placeholder="Search pizza, burger, pasta..."
        onkeyup="searchFood()"
      />
    </div>

    <div id="searchResults" class="mt-4"></div>
  </div>


  <!-- Food Bubbles -->
  <div class="container text-center mt-5">
    <div class="d-flex flex-wrap justify-content-center">
      <div class="food-item"><img src="/images/pepperoni-pizza.jpeg"></div>
      <div class="food-item"><img src="/images/chicken-burger.jpg"></div>
      <div class="food-item"><img src="/images/veggie-pasta.jpeg"></div>
      <div class="food-item"><img src="/images/chocolate-shake.jpeg"></div>
      <div class="food-item"><img src="/images/ice-cream-sundae.jpeg"></div>
      <div class="food-item"><img src="/images/french-fries.jpeg"></div>
    </div>

    <a href="/restaurants" class="btn explore-btn">
      Explore Restaurants üçΩÔ∏è
    </a>
  </div>

  <!-- üîé Search Logic -->
  <script>
    async function searchFood() {
      const q = document.getElementById("globalSearch").value.trim();
      const resultsDiv = document.getElementById("searchResults");

      if (!q) {
        resultsDiv.innerHTML = "";
        return;
      }

      const res = await fetch(`/api/search-items?q=${q}`);
      const items = await res.json();

      resultsDiv.innerHTML = items.map(item => `
        <div class="result-card">
          <img src="/${item.image_url || 'images/default-food.jpg'}">
          <div>
            <h6 class="mb-1">${item.name}</h6>
            <small class="text-muted">${item.restaurant_name}</small>
            <div class="fw-bold text-danger">‚Çπ${item.price}</div>
            <a href="/restaurants/${item.restaurant_id}/menu"
               class="btn btn-sm btn-warning mt-1">
              View Menu
            </a>
          </div>
        </div>
      `).join("");
    }
  </script>

</body>
</html>


