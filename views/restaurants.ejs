<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<h2 class="text-center mb-5 fw-bold text-danger">üçΩÔ∏è Choose Your Restaurant</h2>
<!-- üîç Search Bar -->
<div class="row mb-5 justify-content-center">
  <div class="col-md-7 col-lg-6">
    <div class="search-wrapper">
      <i class="bi bi-search search-icon"></i>
      <input 
        type="text" 
        id="restaurantSearch" 
        class="search-input"
        placeholder="Search restaurants by name or location..."
        onkeyup="filterRestaurants()"
      />
    </div>
  </div>
</div>

<div class="row g-4">
  <% restaurants.forEach(r => { 
       const ratingValue = parseFloat(r.rating) || 0;
       const fullStars = Math.floor(ratingValue);
       const halfStar = (ratingValue % 1) >= 0.5;
       const emptyStars = 5 - fullStars - (halfStar ? 1 : 0);
  %>
  
    <div 
  class="col-md-4 col-sm-6 restaurant-item"
  data-name="<%= r.name.toLowerCase() %>"
  data-address="<%= r.address.toLowerCase() %>"
>

      <div class="restaurant-card shadow-lg border-0 h-100">
        
        <!-- üñºÔ∏è Restaurant Image -->
        <div class="restaurant-img-wrapper">
          <img src="/<%= r.image_url || 'images/default-restaurant.jpg' %>" 
               alt="<%= r.name %>" 
               class="restaurant-img">
        </div>

        <div class="card-body text-center p-3">
          <h5 class="fw-bold text-dark mb-1"><%= r.name %></h5>
          <p class="text-muted small mb-1"><i class="bi bi-geo-alt"></i> <%= r.address %></p>
          <p class="text-muted small mb-2"><i class="bi bi-telephone"></i> <%= r.phone %></p>

          <!-- ‚≠ê Rating Section -->
          <div class="mb-3">
            <% for(let i = 0; i < fullStars; i++) { %>
              <i class="bi bi-star-fill text-warning"></i>
            <% } %>
            <% if (halfStar) { %>
              <i class="bi bi-star-half text-warning"></i>
            <% } %>
            <% for(let i = 0; i < emptyStars; i++) { %>
              <i class="bi bi-star text-warning"></i>
            <% } %>
            <span class="text-muted small">
              (<%= ratingValue > 0 ? ratingValue.toFixed(1) : "No rating" %>)
            </span>
          </div>

          <a href="/restaurants/<%= r.restaurant_id %>/menu" 
             class="btn btn-custom w-100 fw-semibold">
             <i class="bi bi-eye-fill me-1"></i> View Menu
          </a>
        </div>
      </div>
    </div>
  <% }) %>
</div>

